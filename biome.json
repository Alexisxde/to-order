{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 2,
		"indentStyle": "tab",
		"bracketSameLine": true,
		"bracketSpacing": true,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": { "noImgElement": "off" },
			"a11y": { "useSemanticElements": "off", "noStaticElementInteractions": "off" },
			"suspicious": {
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "off",
				"noConsole": "error",
				"noAssignInExpressions": "off",
				"noDocumentCookie": "off"
			},
			"correctness": { "useParseIntRadix": "off" },
			"complexity": { "noBannedTypes": "off", "noUselessLoneBlockStatements": "off", "noAdjacentSpacesInRegex": "off" },
			"style": { "noNamespace": "error" }
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"attributePosition": "auto",
			"quoteStyle": "double",
			"trailingCommas": "none"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": { "recommended": true, "organizeImports": "off", "useSortedProperties": "on" }
		}
	}
}
